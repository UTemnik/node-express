<h1>Добавить курсы</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input id="title" type="text" class="validate" name="title" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите цену"/>
    </div>

    <div class="input-field">
        <input id="price" type="text" class="validate" name="price" required min="1">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите название"/>
    </div>

    <div class="input-field">
        <input id="img" type="text" class="validate" name="img" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL картинки"/>
    </div>

    <button class="btn btn-primary">Добавить курс</button>
</form>